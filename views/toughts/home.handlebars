<div class="home-header">
  {{#if search}}
    <h1>Resultados para a busca: <span>{{search}}</span></h1>

    {{#if toughtsQty}}
      <p>Foram encontrados <span>{{toughtsQty}}</span> resultados.</p>
    {{else}}
      <p>Não foram encontrados resultados para a busca.</p>
    {{/if}}

  {{else}}
    <h1>Conheça alguns dos nossos <span>Pensamentos</span></h1>
  {{/if}}

  

  <form action="/" method="get">
    <input type="text" name="search" placeholder="Deseja algo especifico?">
    <input class="btn" type="submit" value="Buscar">
  </form>

  <div class="order-container">
    <p>Ordernar por: </p>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="new">
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>

   <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="old">
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Limpar</a>
  </div>
</div>

<div class="tought-container">
  {{#each toughts}}
  <figure>
    <blockquote>
      "{{this.title}}"
    </blockquote>
    <figcaption>por <span>{{this.User.name}}</span></figcaption>
  </figure>
  {{/each}}
</div>